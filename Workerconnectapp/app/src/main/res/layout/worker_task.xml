<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    cardview:cardElevation="20dp"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="10dp"
    android:background="#2C3472"
    card_view:cardBackgroundColor="#c8e6c9"
    android:touchscreenBlocksFocus="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/description"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Status-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/status"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Customer Name-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/user"/>
        <TextView
            android:id="@+id/Customer_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Phone Number-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/mobileno"/>
        <TextView
            android:id="@+id/Ph_No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Date-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/date"/>
        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:id="@+id/btnapprove"
        android:textColor="#ffffff"
        android:text="Approve"
        android:onClick="onClick"
        android:background="@drawable/loginbutton_selector"
        style="@style/CustomButtonStyle"
        android:padding="20dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:id="@+id/btndecline"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:text="Decline"
        android:onClick="onClick"
        android:background="@drawable/loginbutton_selector"
        style="@style/CustomButtonStyle"
        android:fontFamily="sans-serif-condensed"/>
</LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
