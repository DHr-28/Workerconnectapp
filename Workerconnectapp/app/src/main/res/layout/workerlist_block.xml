<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="430dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    cardview:cardElevation="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="10dp"
    card_view:cardBackgroundColor="#c8e6c9"
    android:touchscreenBlocksFocus="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:text="Name-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/user"/>
        <TextView
            android:id="@+id/workername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="contact-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/mobileno"/>
        <TextView
            android:id="@+id/workerContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Pin Code-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/pincode"/>
        <TextView
            android:id="@+id/workerpinncode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Worker Exprience-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/exprience"/>
        <TextView
            android:id="@+id/workerExprience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Basic Rate-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:textColorHint="@color/input_register_hint"
            android:textColor="@color/input_register"
            android:drawableLeft="@drawable/rupee"/>
        <TextView
            android:id="@+id/workerBasicRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:id="@+id/btnHireme"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:text="Hire me"
        android:onClick="onClick"
        android:background="@drawable/loginbutton_selector"
        style="@style/CustomButtonStyle"
        android:fontFamily="sans-serif-condensed"/>

</LinearLayout>
    </android.support.v7.widget.CardView>